# Add your MongoDB connection string here (never commit the real .env)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/splitit?retryWrites=true&w=majority

# JWT secret for signing tokens (use a long random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Optional: allow frontend origin (Netlify URL after deploy)
FRONTEND_ORIGIN=http://localhost:5173

# Optional: port (Render sets PORT automatically)
PORT=3000
